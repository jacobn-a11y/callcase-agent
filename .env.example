# Required
OPENAI_API_KEY=<YOUR_OPENAI_API_KEY>
OPENAI_MODEL=gpt-4o

# Provider mode: merge | json | gong | grain | gong_grain
PROVIDER=gong_grain

# Output directory
OUTPUT_DIR=output

# Shared internal email domains to exclude from account inference (comma-separated)
INTERNAL_EMAIL_DOMAINS=yourcompany.com

# ---------------------------
# Gong credentials
# Use either bearer token OR access key + secret
# ---------------------------
GONG_BASE_URL=https://api.gong.io
GONG_ACCESS_TOKEN=
GONG_ACCESS_KEY=
GONG_ACCESS_KEY_SECRET=

# ---------------------------
# Grain credentials
# ---------------------------
GRAIN_BASE_URL=https://grain.com/_/public-api
GRAIN_API_TOKEN=

# ---------------------------
# Merge credentials (if PROVIDER=merge)
# ---------------------------
MERGE_API_KEY=
MERGE_ACCOUNT_TOKEN=
MERGE_BASE_URL=https://api.merge.dev/api/filestorage/v1
MERGE_ACCOUNT_NAME=
MERGE_ACCOUNT_ID=

# ---------------------------
# JSON input (if PROVIDER=json)
# ---------------------------
JSON_INPUT_FILE=./sample-data/calls.json
